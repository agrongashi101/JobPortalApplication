@model IEnumerable<Job>

@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Job Portal</h1>
            <p class="lead text-body-secondary">Find the best opportunities for your career. Whether you're looking for a job or hiring someone, this is the place to start!</p>
            <p>
               
                <a href="/Job/Index" class="btn btn-primary my-2">Explore Jobs</a>
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@item.Image" alt="Card image cap" width="100%" height="225px">
                        <div class="card-body">
                            <p class="card-text">@item.Position</p>
                            <p class="card-text">
                                @(item.Description.Length > 100
                                    ? item.Description.Substring(0, 100) + "..."
                                    : item.Description)
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Job" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                                <small class="text-body-secondary">@item.PostedTime.ToString("dd-MMM-yy")</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

